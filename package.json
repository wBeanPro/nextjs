{
  "name": "gamifly-frontend",
  "version": "1.0.0",
  "private": true,
  "sideEffects": [
    "*.css",
    "*.less",
    "*.scss"
  ],
  "scripts": {
    "postinstall": "npm run gen:theme-typings",
    "clean": "rimraf .next out",
    "dev": "next dev",
    "build": "npm run clean && cross-env EVN_FILE_NAME=dev next build",
    "build:prod": "npm run clean && cross-env EVN_FILE_NAME=prod next build",
    "export": "cross-env EVN_FILE_NAME=dev next export",
    "export:prod": "cross-env EVN_FILE_NAME=prod next export",
    "start": "cross-env EVN_FILE_NAME=dev next start -p ${PORT:=3000}",
    "start:dev": "cross-env EVN_FILE_NAME=dev next start -p ${PORT:=3102}",
    "start:prod": "cross-env EVN_FILE_NAME=prod next start -p ${PORT:=3002}",
    "lint": "npm run tslint && npm run eslint && npm run stylelint",
    "eslint": "eslint --fix --ext .tsx,.ts,.jsx,.js src/",
    "tslint": "tsc --project tsconfig.json --pretty --noEmit",
    "stylelint": "stylelint \"src/**/*.{scss,sass,css}\" --syntax scss --fix",
    "prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,md,json}'",
    "gen:theme-typings": "chakra-cli tokens src/theme/index.ts"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@chakra-ui/icons": "^2.0.2",
    "@chakra-ui/react": "^2.2.1",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@walletconnect/web3-provider": "^1.7.8",
    "@web3-react/core": "^6.1.9",
    "@web3-react/injected-connector": "^6.0.7",
    "@web3-react/walletconnect-connector": "^6.2.13",
    "axios": "^0.27.2",
    "bignumber.js": "^9.0.1",
    "copy-to-clipboard": "^3.3.1",
    "cross-env": "^7.0.3",
    "ethers": "^5.7.2",
    "framer-motion": "^6",
    "next": "^12.1.0",
    "next-i18next": "^10.3.0",
    "next-images": "^1.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-ga": "^3.3.1",
    "react-toastify": "^8.0.3",
    "sass": "^1.42.1",
    "swr": "^1.3.0",
    "web3": "^1.7.4",
    "web3modal": "^1.9.8",
    "zustand": "^3.5.13"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.15.4",
    "@chakra-ui/cli": "^2.1.0",
    "@types/mathjs": "^9.4.2",
    "@types/node": "^17.0.19",
    "@types/react": "^18.0.12",
    "@types/react-custom-scrollbars": "^4.0.8",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.26.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "keyv": "^4.5.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.21.0",
    "typescript": "4.7.3"
  }
}
